---
// Welcome.astro
import SkillIcon from "../components/SkillIcon.astro";

// Import all skill icons
import pythonLogo from "../assets/python.svg";
import astroLogo from "../assets/astro.svg";
import uipathLogo from "../assets/uipath.svg";
import excelLogo from "../assets/Excel.svg";
import postgresqlLogo from "../assets/PostgreSQL.svg";
import powerappsLogo from "../assets/Powerapps.svg";
import powerautomateLogo from "../assets/PowerAutomate.svg";
import powerbiLogo from "../assets/PowerBI.svg";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Portfolio of Cristopher Barrenechea - Data Analyst & Automation Specialist"
    />
    <title>Cristopher Barrenechea | Data Analyst Portfolio</title>
  </head>
  <body>
    <nav>
      <div class="nav-brand">Cristopher Barrenechea</div>
      <div class="nav-links">
        <a href="#home">Home</a>
        <a href="#about">About</a>
        <a href="#projects">Projects</a>
        <a href="#contact">Contact</a>
      </div>
    </nav>

    <main>
      <!-- Home Section -->
      <section id="home">
        <h1>Cristopher Barrenechea</h1>
        <p>Data Analyst & Automation Specialist from Lima, Peru</p>
        <a href="#projects" class="cta-button">View My Work</a>
      </section>

      <!-- About Section -->
      <section id="about">
        <h2>About Me</h2>
        <p>
          I am a Systems Engineer graduate from Universidad de Lima with
          experience in data analysis, ETL, automation with Python, and Power
          BI.
        </p>
        <h3>Technical Skills</h3>
        <div class="skills-grid">
          <div class="skill-icon" data-tooltip="Python">
            <img src={pythonLogo.src} alt="Python" />
          </div>
          <div class="skill-icon" data-tooltip="Excel">
            <img src={excelLogo.src} alt="Excel" />
          </div>
          <div class="skill-icon" data-tooltip="Power BI">
            <img src={powerbiLogo.src} alt="Power BI" />
          </div>
          <div class="skill-icon" data-tooltip="Power Automate">
            <img src={powerautomateLogo.src} alt="Power Automate" />
          </div>
          <div class="skill-icon" data-tooltip="Power Apps">
            <img src={powerappsLogo.src} alt="Power Apps" />
          </div>
          <div class="skill-icon" data-tooltip="Postgress SQL">
            <img src={postgresqlLogo.src} alt="Postgress SQL" />
          </div>
          <div class="skill-icon" data-tooltip="UiPath">
            <img src={uipathLogo.src} alt="UiPath" />
          </div>
          <div class="skill-icon" data-tooltip="Astro">
            <img src={astroLogo.src} alt="Astro" />
          </div>
        </div>
      </section>

      <!-- Projects Section -->
      <section id="projects">
        <h2>Projects</h2>
        <div class="projects-grid">
          <article class="project-card">
            <h3>Sales Data Dashboard</h3>
            <p class="project-tech"><em>Power BI, Python</em></p>
            <p>ETL and KPI visualizations for retail sales.</p>
            <a
              href="https://github.com/username/sales-dashboard"
              target="_blank"
              rel="noopener noreferrer">View on GitHub →</a
            >
          </article>
          <article class="project-card">
            <h3>Process Automation Tool</h3>
            <p class="project-tech"><em>Automation Anywhere, Python</em></p>
            <p>Automated data extraction and processing workflows.</p>
            <a
              href="https://github.com/username/automation-tool"
              target="_blank"
              rel="noopener noreferrer">View on GitHub →</a
            >
          </article>
        </div>
      </section>

      <!-- Contact Section -->
      <section id="contact">
        <h2>Contact Me</h2>
        <p>
          Feel free to get in touch for collaborations, freelance projects, or
          research inquiries.
        </p>

        <div class="social-links">
          <a
            href="mailto:your.email@example.com"
            class="social-icon"
            aria-label="Email"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="32"
              height="32"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path
                d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
              ></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
          </a>
          <a
            href="https://github.com/username"
            target="_blank"
            rel="noopener noreferrer"
            class="social-icon"
            aria-label="GitHub"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="32"
              height="32"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path
